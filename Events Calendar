<events-calendar-{{ ai_gen_id }}
  class="ai-events-calendar-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-events-calendar__header-{{ ai_gen_id }}">
    {% if block.settings.calendar_title != blank %}
      <h2 class="ai-events-calendar__title-{{ ai_gen_id }}">{{ block.settings.calendar_title }}</h2>
    {% endif %}
    <div class="ai-events-calendar__nav-{{ ai_gen_id }}">
      <button
        class="ai-events-calendar__nav-button-{{ ai_gen_id }}"
        data-action="prev"
        aria-label="Previous month"
      >
        ‚Üê
      </button>
      <div class="ai-events-calendar__current-month-{{ ai_gen_id }}" data-current-month></div>
      <button
        class="ai-events-calendar__nav-button-{{ ai_gen_id }}"
        data-action="next"
        aria-label="Next month"
      >
        ‚Üí
      </button>
    </div>
  </div>

  <div class="ai-events-calendar__grid-{{ ai_gen_id }}" data-calendar-grid></div>

  <div class="ai-events-calendar__events-list-{{ ai_gen_id }}">
    <h3 class="ai-events-calendar__events-title-{{ ai_gen_id }}">{{ block.settings.events_list_title }}</h3>
    <div data-events-container></div>
  </div>
</events-calendar-{{ ai_gen_id }}>

<script>
  (function() {
    class EventsCalendar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentDate = new Date();
        this.events = this.parseEvents();
        this.selectedDate = null;
        this.handleSectionLoad = this.handleSectionLoad.bind(this);
      }

      connectedCallback() {
        this.calendarGrid = this.querySelector('[data-calendar-grid]');
        this.currentMonthDisplay = this.querySelector('[data-current-month]');
        this.eventsContainer = this.querySelector('[data-events-container]');
        this.prevButton = this.querySelector('[data-action="prev"]');
        this.nextButton = this.querySelector('[data-action="next"]');

        this.prevButton.addEventListener('click', () => this.changeMonth(-1));
        this.nextButton.addEventListener('click', () => this.changeMonth(1));

        // Listen for Shopify theme editor events
        document.addEventListener('shopify:section:load', this.handleSectionLoad);
        document.addEventListener('shopify:section:rerender', this.handleSectionLoad);

        this.render();
      }

      disconnectedCallback() {
        // Clean up event listeners
        document.removeEventListener('shopify:section:load', this.handleSectionLoad);
        document.removeEventListener('shopify:section:rerender', this.handleSectionLoad);
      }

      handleSectionLoad(event) {
        // Check if this event is for our section
        if (event.target.contains(this)) {
          this.refreshCalendar();
        }
      }

      refreshCalendar() {
        // Re-parse events from the updated DOM
        this.events = this.parseEvents();
        this.render();
      }

      parseEvents() {
        const events = [];
        {% for i in (1..25) %}
          {% assign event_enabled_key = 'event_' | append: i | append: '_enabled' %}
          {% assign event_date_key = 'event_' | append: i | append: '_date' %}
          {% assign event_title_key = 'event_' | append: i | append: '_title' %}
          {% assign event_description_key = 'event_' | append: i | append: '_description' %}
          {% assign event_time_key = 'event_' | append: i | append: '_time' %}
          {% assign event_location_key = 'event_' | append: i | append: '_location' %}

          {% if block.settings[event_enabled_key] and block.settings[event_date_key] != blank %}
            events.push({
              date: '{{ block.settings[event_date_key] }}',
              title: {{ block.settings[event_title_key] | json }},
              description: {{ block.settings[event_description_key] | json }},
              time: {{ block.settings[event_time_key] | json }},
              location: {{ block.settings[event_location_key] | json }}
            });
          {% endif %}
        {% endfor %}
        return events;
      }

      changeMonth(direction) {
        this.currentDate.setMonth(this.currentDate.getMonth() + direction);
        this.render();
      }

      render() {
        this.renderCalendar();
        this.renderEvents();
      }

      renderCalendar() {
        const year = this.currentDate.getFullYear();
        const month = this.currentDate.getMonth();
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const prevLastDay = new Date(year, month, 0);
        const firstDayOfWeek = firstDay.getDay();
        const lastDate = lastDay.getDate();
        const prevLastDate = prevLastDay.getDate();

        this.currentMonthDisplay.textContent = firstDay.toLocaleDateString('en-US', {
          month: 'long',
          year: 'numeric'
        });

        let html = '';
        const dayHeaders = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
        dayHeaders.forEach(day => {
          html += `<div class="ai-events-calendar__day-header-{{ ai_gen_id }}">${day}</div>`;
        });

        for (let i = firstDayOfWeek - 1; i >= 0; i--) {
          const day = prevLastDate - i;
          html += this.renderDay(day, true, year, month - 1);
        }

        for (let day = 1; day <= lastDate; day++) {
          html += this.renderDay(day, false, year, month);
        }

        const remainingDays = 42 - (firstDayOfWeek + lastDate);
        for (let day = 1; day <= remainingDays; day++) {
          html += this.renderDay(day, true, year, month + 1);
        }

        this.calendarGrid.innerHTML = html;

        this.calendarGrid.querySelectorAll('.ai-events-calendar__day-{{ ai_gen_id }}').forEach(dayEl => {
          dayEl.addEventListener('click', (e) => {
            const dateStr = e.currentTarget.dataset.date;
            if (dateStr && !e.currentTarget.classList.contains('other-month')) {
              this.selectedDate = dateStr;
              this.renderEvents();
            }
          });
        });
      }

      renderDay(day, isOtherMonth, year, month) {
        const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
        const today = new Date();
        const isToday = dateStr === `${today.getFullYear()}-${String(today.getMonth() + 1).padStart(2, '0')}-${String(today.getDate()).padStart(2, '0')}`;
        const dayEvents = this.events.filter(event => event.date === dateStr);
        const hasEvent = dayEvents.length > 0;

        let classes = 'ai-events-calendar__day-{{ ai_gen_id }}';
        if (isOtherMonth) classes += ' other-month';
        if (isToday) classes += ' today';
        if (hasEvent) classes += ' has-event';

        let previewHTML = '';
        if (hasEvent && !isOtherMonth) {
          const event = dayEvents[0]; // Show first event in preview
          previewHTML = `
            <div class="ai-events-calendar__event-preview-{{ ai_gen_id }}">
              <div class="ai-events-calendar__preview-title-{{ ai_gen_id }}">${this.escapeHtml(event.title || '')}</div>
              ${event.time ? `<div class="ai-events-calendar__preview-time-{{ ai_gen_id }}">${this.escapeHtml(event.time)}</div>` : ''}
              ${event.location ? `<div class="ai-events-calendar__preview-location-{{ ai_gen_id }}">${this.escapeHtml(event.location)}</div>` : ''}
              ${dayEvents.length > 1 ? `<div style="font-size: 11px; margin-top: 6px; opacity: 0.8;">+${dayEvents.length - 1} more event${dayEvents.length > 2 ? 's' : ''}</div>` : ''}
            </div>
          `;
        }

        return `
          <div class="${classes}" data-date="${dateStr}">
            <div class="ai-events-calendar__day-number-{{ ai_gen_id }}">${day}</div>
            ${hasEvent ? '<div class="ai-events-calendar__event-indicator-{{ ai_gen_id }}"></div>' : ''}
            ${previewHTML}
          </div>
        `;
      }

      escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      renderEvents() {
        let eventsToShow = this.events;

        if (this.selectedDate) {
          eventsToShow = this.events.filter(event => event.date === this.selectedDate);
        } else {
          const year = this.currentDate.getFullYear();
          const month = this.currentDate.getMonth();
          eventsToShow = this.events.filter(event => {
            const eventDate = new Date(event.date);
            return eventDate.getFullYear() === year && eventDate.getMonth() === month;
          });
        }

        eventsToShow.sort((a, b) => new Date(a.date) - new Date(b.date));

        if (eventsToShow.length === 0) {
          this.eventsContainer.innerHTML = `
            <div class="ai-events-calendar__no-events-{{ ai_gen_id }}">
              ${this.selectedDate ? 'No events on this date' : 'No events this month'}
            </div>
          `;
          return;
        }

        let html = '';
        eventsToShow.forEach(event => {
          const eventDate = new Date(event.date);
          const formattedDate = eventDate.toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          });

          const metaHTML = (event.time || event.location) ? `
            <div class="ai-events-calendar__event-meta-{{ ai_gen_id }}">
              ${event.time ? `<div class="ai-events-calendar__event-time-{{ ai_gen_id }}">${event.time}</div>` : ''}
              ${event.location ? `<div class="ai-events-calendar__event-location-{{ ai_gen_id }}">${event.location}</div>` : ''}
            </div>
          ` : '';

          html += `
            <div class="ai-events-calendar__event-card-{{ ai_gen_id }}">
              <div class="ai-events-calendar__event-date-{{ ai_gen_id }}">${formattedDate}</div>
              <div class="ai-events-calendar__event-title-{{ ai_gen_id }}">${event.title}</div>
              ${metaHTML}
              ${event.description ? `<div class="ai-events-calendar__event-description-{{ ai_gen_id }}">${event.description}</div>` : ''}
            </div>
          `;
        });

        this.eventsContainer.innerHTML = html;
      }
    }

    customElements.define('events-calendar-{{ ai_gen_id }}', EventsCalendar{{ ai_gen_id }});
  })();
</script>

