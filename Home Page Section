        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  <div class="ai-split-section__product-{{ ai_gen_id }}">
    {% assign has_products = false %}
    {% for i in (1..5) %}
      {% assign product_key = 'product_' | append: i %}
      {% if block.settings[product_key] != blank %}
        {% assign has_products = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_products %}
      <div class="ai-split-section__product-wrapper-{{ ai_gen_id }}">
        <div class="ai-split-section__nav-buttons-{{ ai_gen_id }}">
