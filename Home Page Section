<script>
  (function() {
    class ProductScroll{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.productItems = [];
        this.isScrolling = false;
        this.containerHeight = 0;
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('.ai-split-section__product-scroll-container-{{ ai_gen_id }}');
        this.scrollWrapper = this.querySelector('.ai-split-section__product-scroll-wrapper-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-split-section__nav-button-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-split-section__nav-button-next-{{ ai_gen_id }}');
        
        if (!this.scrollWrapper || !this.scrollContainer) return;

        this.productItems = Array.from(this.querySelectorAll('.ai-split-section__product-item-{{ ai_gen_id }}'));
        
        if (this.productItems.length === 0) return;

        this.setupEventListeners();
        this.calculateContainerHeight();
        this.updateScroll();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scrollToPrevious());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scrollToNext());
        }

        const addToCartButtons = this.querySelectorAll('.ai-split-section__add-to-cart-button-{{ ai_gen_id }}');
        addToCartButtons.forEach(button => {
          button.addEventListener('click', (e) => this.handleAddToCart(e));
        });

        window.addEventListener('resize', () => {
          this.calculateContainerHeight();
          this.updateScroll();
        });
      }

      handleAddToCart(e) {
        const button = e.currentTarget;
        const variantId = button.dataset.variantId;
        
        if (!variantId) return;

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        })
        .then(response => response.json())
        .then(data => {
          window.dispatchEvent(new Event('cart:refresh'));
          
          if (window.theme && window.theme.cart) {
            window.theme.cart.refresh();
          }
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
        });
      }

      calculateContainerHeight() {
        if (this.productItems.length === 0) return;

        const firstItem = this.productItems[0];
        const itemHeight = firstItem.offsetHeight;
        const gap = {{ block.settings.product_spacing }};

        this.containerHeight = itemHeight * 1.6;
        this.scrollContainer.style.height = `${this.containerHeight}px`;
      }

      scrollToPrevious() {
        if (this.currentIndex > 0 && !this.isScrolling) {
          this.currentIndex--;
          this.updateScroll();
        }
      }

      scrollToNext() {
        if (this.currentIndex < this.productItems.length - 1 && !this.isScrolling) {
          this.currentIndex++;
          this.updateScroll();
        }
      }

      updateScroll() {
        if (this.productItems.length === 0) return;

        this.isScrolling = true;

        const firstItem = this.productItems[0];
        const itemHeight = firstItem.offsetHeight;
        const gap = {{ block.settings.product_spacing }};
        const centerOffset = (this.containerHeight - itemHeight) / 2;

        let scrollDistance;
        if (this.currentIndex === 0) {
          scrollDistance = 0;
        } else {
          scrollDistance = (itemHeight + gap) * this.currentIndex - centerOffset;
        }

        this.scrollWrapper.style.transform = `translateY(-${scrollDistance}px)`;

        this.productItems.forEach((item, index) => {
          if (index === this.currentIndex) {
            item.classList.add('active');
          } else {
            item.classList.remove('active');
          }
        });

        this.updateButtons();

        setTimeout(() => {
          this.isScrolling = false;
        }, 500);
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        
        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex === this.productItems.length - 1;
        }
      }
    }

    customElements.define('product-scroll-{{ ai_gen_id }}', ProductScroll{{ ai_gen_id }});
  })();
</script>

